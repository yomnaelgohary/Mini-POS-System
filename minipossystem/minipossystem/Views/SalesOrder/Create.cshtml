@{
    ViewBag.Title = "Create Sales Order";
}
<script src="~/js/salesorder.js"></script>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<div class="container mt-4">
    <h2>Create Sales Order</h2>

    <!-- Step 1: Search for customer -->

    <div class="mb-3">
        <label>Customer Name</label>
        <input type="text" id="searchName" class="form-control" placeholder="Enter customer name" />
    </div>
    <div class="mb-3">
        <label>Customer Mobile</label>
        <input type="text" id="searchMobile" class="form-control" placeholder="Enter mobile number" />
    </div>
    <button class="btn btn-primary" onclick="searchCustomer()">Search Customer</button>
    <button class="btn btn-outline-success mt-3" data-bs-toggle="modal" data-bs-target="#addCustomerModal">
        Add New Customer
    </button>


    <div id="customerResult" class="mt-3 d-none alert alert-info"></div>
</div>
<!-- Add Customer Modal -->
<div class="modal fade" id="addCustomerModal" tabindex="-1" aria-labelledby="addCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCustomerModalLabel">Add New Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label>Name</label>
                    <input type="text" id="newCustomerName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Mobile</label>
                    <input type="text" id="newCustomerMobile" class="form-control" />
                </div>
                <div id="addCustomerResult" class="alert d-none"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="addCustomer()">Add Customer</button>
            
            </div>
        </div>
    </div>
</div>

<!-- Step 2: Search for Products -->

<div class="mb-3">
    <label>Product ID</label>
    <input type="text" id="searchProduct" class="form-control" placeholder="Enter Product ID" />
</div>
<button class="btn btn-primary" onclick="searchProduct()">Search Product</button>
<div id="productResult" class="mt-3 d-none">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title" id="productName"></h5>
            <p class="card-text">
                <strong>Price:</strong> <span id="productPrice"></span><br />
                <strong>Code:</strong> <span id="productCode"></span>
            </p>
        </div>
    </div>
</div>
<div class="modal fade" id="productModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Product Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Description:</strong> <span id="modalProductName"></span></p>
                <p><strong>Price:</strong> <span id="modalProductPrice"></span></p>
                <p><strong>Code:</strong> <span id="modalProductCode"></span></p>
                <p>
                    <strong>Quantity:</strong>
                    <input type="number" id="modalProductQty" class="form-control" value="1" min="1" />
                </p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" onclick="addProductToOrder()">Add to Order</button>
            </div>
        </div>
    </div>
</div>
















