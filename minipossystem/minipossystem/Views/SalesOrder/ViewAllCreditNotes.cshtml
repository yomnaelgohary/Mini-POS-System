@model List<minipossystem.Models.CreditNote>
@{
    ViewBag.Title = "View All Credit Notes";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap & jQuery -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }

        .btn-icon {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .table-container {
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Page Header -->
        <div class="mb-4 d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-6 fw-bold text-dark mb-2">All Credit Notes</h1>
                <p class="text-muted">View all issued credit notes and refunds</p>
            </div>
            <div>
                <a href="/SalesOrder/ViewAllInvoices" class="btn btn-secondary btn-lg btn-icon">
                    <i class="bi bi-arrow-left"></i>
                    Back to Invoices
                </a>
            </div>
        </div>

        <!-- Credit Notes Table -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0 btn-icon">
                    <i class="bi bi-arrow-return-left"></i>
                    Credit Notes
                </h5>
            </div>
            <div class="card-body">
                <div class="table-container">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-semibold">Credit Note ID</th>
                                <th class="fw-semibold">Invoice ID</th>
                                <th class="fw-semibold">Date</th>
                                <th class="fw-semibold">Employee ID</th>
                                <th class="fw-semibold">Refund Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                @foreach (var creditNote in Model)
                                {
                                    <tr>
                                        <td>@creditNote.CreditNoteId</td>
                                        <td>@creditNote.SalesInvoiceId</td>
                                        <td>@creditNote.Date.ToString()</td>
                                        <td>@creditNote.EmployeeId</td>
                                        <td>@creditNote.Price.ToString("F2") EGP</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-5">
                                        <i class="bi bi-arrow-return-left display-6 d-block mb-2 text-muted"></i>
                                        No credit notes found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
