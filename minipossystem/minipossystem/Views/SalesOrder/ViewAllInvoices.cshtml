@{
    ViewBag.Title = "View All Invoices";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap & jQuery -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }

        .btn-icon {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .table-container {
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            overflow: hidden;
        }

        .modal-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }

        .status-badge {
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .status-active {
            background-color: #d1e7dd;
            color: #0f5132;
        }

        .status-has-credit {
            background-color: #fff3cd;
            color: #664d03;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Page Header -->
        <div class="mb-4 d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-6 fw-bold text-dark mb-2">All Sales Invoices</h1>
                <p class="text-muted">View and manage all sales invoices</p>
            </div>
            <div>
                <a href="/SalesOrder/ViewAllOrders" class="btn btn-primary btn-lg btn-icon me-2">
                    <i class="bi bi-list-ul"></i>
                    View Orders
                </a>
                <a href="/SalesOrder/ViewAllCreditNotes" class="btn btn-warning btn-lg btn-icon">
                    <i class="bi bi-arrow-return-left"></i>
                    View Credit Notes
                </a>
            </div>
        </div>

        <!-- Invoices Table -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0 btn-icon">
                    <i class="bi bi-receipt-cutoff"></i>
                    Sales Invoices
                </h5>
            </div>
            <div class="card-body">
                <div class="table-container">
                    <table class="table table-hover mb-0" id="invoicesTable">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-semibold">Invoice ID</th>
                                <th class="fw-semibold">Order ID</th>
                                <th class="fw-semibold">Customer</th>
                                <th class="fw-semibold">Contact</th>
                                <th class="fw-semibold">Date</th>
                                <th class="fw-semibold">Total Amount</th>
                                <th class="fw-semibold">Status</th>
                                <th class="fw-semibold text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Invoices will be loaded here -->
                            <tr id="emptyInvoicesRow">
                                <td colspan="8" class="text-center text-muted py-5">
                                    <i class="bi bi-receipt display-6 d-block mb-2 text-muted"></i>
                                    Loading invoices...
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Invoice Modal -->
    <div class="modal fade" id="editInvoiceModal" tabindex="-1" aria-labelledby="editInvoiceModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title btn-icon" id="editInvoiceModalLabel">
                        <i class="bi bi-pencil-square"></i>
                        Edit Invoice
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-4">
                        <h6 class="fw-bold">Invoice Information</h6>
                        <div class="row">
                            <div class="col-md-3">
                                <strong>Invoice ID:</strong> <span id="editInvoiceId"></span>
                            </div>
                            <div class="col-md-3">
                                <strong>Order ID:</strong> <span id="editOrderId"></span>
                            </div>
                            <div class="col-md-3">
                                <strong>Customer:</strong> <span id="editCustomerName"></span>
                            </div>
                            <div class="col-md-3">
                                <strong>Date:</strong> <span id="editInvoiceDate"></span>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="mb-4">
                        <h6 class="fw-bold">Invoice Items</h6>
                        <div class="table-container">
                            <table class="table table-hover mb-0" id="editInvoiceItemsTable">
                                <thead class="table-light">
                                    <tr>
                                        <th class="fw-semibold">Product</th>
                                        <th class="fw-semibold">Code</th>
                                        <th class="fw-semibold">Unit Price</th>
                                        <th class="fw-semibold">Current Qty</th>
                                        <th class="fw-semibold">New Qty</th>
                                        <th class="fw-semibold">Total</th>
                                        <th class="fw-semibold text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Invoice items will be loaded here -->
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3 text-end">
                            <h5 class="fw-bold">New Total: <span id="editInvoiceTotal" class="text-success">0.00 EGP</span></h5>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary btn-icon" onclick="saveInvoiceChanges()">
                        <i class="bi bi-check-circle"></i>
                        Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Credit Note Modal -->
    <div class="modal fade" id="createCreditNoteModal" tabindex="-1" aria-labelledby="createCreditNoteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title btn-icon" id="createCreditNoteModalLabel">
                        <i class="bi bi-arrow-return-left"></i>
                        Create Credit Note
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-4">
                        <h6 class="fw-bold">Invoice Information</h6>
                        <div class="row">
                            <div class="col-md-3">
                                <strong>Invoice ID:</strong> <span id="creditInvoiceId"></span>
                            </div>
                            <div class="col-md-3">
                                <strong>Customer:</strong> <span id="creditCustomerName"></span>
                            </div>
                            <div class="col-md-3">
                                <strong>Contact:</strong> <span id="creditCustomerContact"></span>
                            </div>
                            <div class="col-md-3">
                                <strong>Invoice Date:</strong> <span id="creditInvoiceDate"></span>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="mb-4">
                        <h6 class="fw-bold">Select Items for Credit Note (Refund)</h6>
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Select the items and quantities that the customer wants to return/refund.
                        </div>
                        <div class="table-container">
                            <table class="table table-hover mb-0" id="creditNoteItemsTable">
                                <thead class="table-light">
                                    <tr>
                                        <th class="fw-semibold">
                                            <input type="checkbox" id="selectAllCreditItems" onchange="toggleAllCreditItems()">
                                        </th>
                                        <th class="fw-semibold">Product</th>
                                        <th class="fw-semibold">Code</th>
                                        <th class="fw-semibold">Unit Price</th>
                                        <th class="fw-semibold">Invoiced Qty</th>
                                        <th class="fw-semibold">Return Qty</th>
                                        <th class="fw-semibold">Refund Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Credit note items will be loaded here -->
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-3 text-end">
                            <h5 class="fw-bold">Total Refund: <span id="creditNoteTotal" class="text-danger">0.00 EGP</span></h5>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-warning btn-icon" onclick="submitCreditNote()">
                        <i class="bi bi-arrow-return-left"></i>
                        Create Credit Note
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/viewallinvoices.js"></script>
</body>
</html>
