@{
    ViewBag.Title = "View All Sales Orders";
}

<!-- Bootstrap & jQuery -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Your custom JS -->
<script src="~/js/viewallorders.js"></script>

<style>
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid rgba(0, 0, 0, 0.125);
    }
    .btn-icon {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    .table-container {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        overflow: hidden;
    }
    .modal-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
    }
    .status-pending {
        background-color: #fff3cd;
        color: #664d03;
    }
    .status-completed {
        background-color: #d1e7dd;
        color: #0f5132;
    }
</style>

<div class="container mt-4">
    <!-- Page Header -->
    <div class="mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h1 class="display-6 fw-bold text-dark mb-2">All Sales Orders</h1>
            <p class="text-muted">View, search, edit, and manage all sales orders</p>
        </div>
        <div>
            <a href="/SalesOrder/Create" class="btn btn-success btn-lg btn-icon">
                <i class="bi bi-plus-circle"></i>
                Create New Order
            </a>
        </div>
    </div>

    <!-- Search Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0 btn-icon">
                <i class="bi bi-search"></i>
                Search Orders
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-8">
                    <input type="number" id="searchOrderId" class="form-control" placeholder="Enter Sales Order ID" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100 btn-icon" onclick="searchOrderById()">
                        <i class="bi bi-search"></i>
                        Search
                    </button>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-secondary w-100 btn-icon" onclick="loadAllOrders()">
                        <i class="bi bi-arrow-clockwise"></i>
                        Show All
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0 btn-icon">
                <i class="bi bi-list-ul"></i>
                Sales Orders
            </h5>
        </div>
        <div class="card-body">
            <div class="table-container">
                <table class="table table-hover mb-0" id="ordersTable">
                    <thead class="table-light">
                        <tr>
                            <th class="fw-semibold">Order ID</th>
                            <th class="fw-semibold">Customer ID</th>
                            <th class="fw-semibold">Employee ID</th>
                            <th class="fw-semibold">Order Date</th>
                            <th class="fw-semibold">Status</th>
                            <th class="fw-semibold text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Orders will be loaded here -->
                        <tr id="emptyOrdersRow">
                            <td colspan="6" class="text-center text-muted py-5">
                                <i class="bi bi-inbox display-6 d-block mb-2 text-muted"></i>
                                Loading orders...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Edit Order Modal -->
<div class="modal fade" id="editOrderModal" tabindex="-1" aria-labelledby="editOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title btn-icon" id="editOrderModalLabel">
                    <i class="bi bi-pencil-square"></i>
                    Edit Sales Order
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-4">
                    <h6 class="fw-bold">Order Information</h6>
                    <div class="row">
                        <div class="col-md-3">
                            <strong>Order ID:</strong> <span id="editOrderId"></span>
                        </div>
                        <div class="col-md-3">
                            <strong>Customer ID:</strong> <span id="editCustomerId"></span>
                        </div>
                        <div class="col-md-3">
                            <strong>Order Date:</strong> <span id="editOrderDate"></span>
                        </div>
                        <div class="col-md-3">
                            <strong>Status:</strong> <span id="editOrderStatus"></span>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="mb-4">
                    <h6 class="fw-bold">Order Items</h6>
                    <div class="table-container">
                        <table class="table table-hover mb-0" id="editOrderItemsTable">
                            <thead class="table-light">
                                <tr>
                                    <th class="fw-semibold">Product</th>
                                    <th class="fw-semibold">Code</th>
                                    <th class="fw-semibold">Unit Price</th>
                                    <th class="fw-semibold">Quantity</th>
                                    <th class="fw-semibold">Total</th>
                                    <th class="fw-semibold text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Order items will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" onclick="saveOrderChanges()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title btn-icon" id="deleteConfirmModalLabel">
                    <i class="bi bi-exclamation-triangle"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete Sales Order <strong id="deleteOrderId"></strong>?</p>
                <p class="text-danger"><small>This action cannot be undone and will delete all associated order items.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteOrder()">Delete Order</button>
            </div>
        </div>
    </div>
</div>
