@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post" class="mt-3">
    <div class="mb-3">
        <label for="loginId" class="form-label">Employee ID</label>
        <input type="number" class="form-control" id="loginId" name="loginId" required />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger mt-2">Invalid Employee ID. Try again.</div>
    }
</form>
